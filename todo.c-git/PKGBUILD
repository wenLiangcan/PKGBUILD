# Maintainer: wenLiangcan <boxeed@gmail.com>

pkgname=todo.c-git
name=todo.c
pkgver=2013.09.04
pkgrel=1
pkgdesc="Command line lightweight todo tool with readable storage , written in C"
arch=("any")
url="https://github.com/hit9/todo.c"
license=('BSD')
makedepends=('git')
provides=('todo.c')
conflicts=('todo.c' 'todo')
source=('git://github.com/hit9/todo.c.git')
md5sums=('SKIP')

build() {
		cd "$srcdir/$name"
		make
}

package() {
		cd "$srcdir/$name"
		install -Dm755 "src/todo" "$pkgdir/usr/bin/todo"
		install -Dm644 "LICENSE-BSD" "$pkgdir/usr/share/licenses/$name/LICENSE-BSD"
}
