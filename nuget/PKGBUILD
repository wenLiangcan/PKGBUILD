# Maintainer: wenLiangcan <boxeed@gmail.com>

pkgname=nuget
pkgver=2.7.41115.310
pkgrel=1
pkgdesc="Package manager for .NET."
arch=('x86_64' 'i686')
url="http://www.nuget.org"
license=('Apache')
depends=('mono' 'sh')
source=("http://nuget.org/nuget.exe"
        "${pkgname}")
md5sums=('8ea60fa0d19fb74ce2d5b3c0ca5957f9'
         '7d52a5ad1c8ba770f57940457c26644f')
install="${pkgname}.install"

build() {
		cd "${srcdir}"
}

package() {
		install -Dm755 "${pkgname}.exe" "${pkgdir}/opt/${pkgname}/${pkgname}.exe"
		install -Dm755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}
