# Maintainer: wenLiangcan <boxeed@gmail.com>

pkgname=sputnik
_pkgname=Sputnik
pkgver=1.0.4
pkgrel=1
pkgdesc="Simple and practical RSS reader."
arch=('x86_64')
url="http://sputnik.szwacz.com"
license=('GPLv3')
depends=('alsa-lib' 'gconf' 'gdk-pixbuf2' 'nss' 'libudev.so.0')
source=("${pkgname}.run"::"http://sputnik.szwacz.com/downloads/${_pkgname}-v${pkgver}.run")
md5sums=('bc3dc7b914ae3b734ddc1d64d8bac448')
options=('!strip')

package() {
		install -d "${srcdir}/${pkgname}/"
		sh "${pkgname}.run" --tar -xf -C "${srcdir}/${pkgname}"

		cd "${srcdir}/${pkgname}"
		install -d "${pkgdir}/opt/"
		cp -r -f "${_pkgname}" "${pkgdir}/opt"
		chmod 755 "${pkgdir}/opt/${_pkgname}/${pkgname}.sh"
		install -Dm644 "${_pkgname}.desktop" "${pkgdir}/usr/share/applications/${_pkgname}.desktop"
}
