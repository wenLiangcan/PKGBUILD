# Maintainer: wenLiangcan <boxeed@gmail.com>

pkgname=monodevelop-database
pkgver=5.0
_pkgver=${pkgver}-0
pkgrel=1
pkgdesc="Database plugin for monodevelop"
arch=('i686' 'x86_64')
url="http://monodevelop.com"
license=('MIT')
depends=('gtk-sharp-2>=2.12.8' 'monodevelop>=4.2.3' 'mono-addins>=0.4')
makedepends=('mono')
source=(http://origin-download.mono-project.com/sources/$pkgname/$pkgname-$_pkgver.tar.bz2)
md5sums=('cf94bad363812d5453c0939ad93da662')

build() {
  export MONO_SHARED_DIR="$startdir/src/.wabi"
  mkdir -p "$MONO_SHARED_DIR"

  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr
  make || return 1
  make DESTDIR="$pkgdir/" install
}
