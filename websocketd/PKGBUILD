# Maintainer: wenLiangcan <boxeed@gmail.com>

pkgname=websocketd
pkgver=0.2.9
pkgrel=1
pkgdesc="Like inetd, but for WebSockets. Turn any application that uses STDIO/STDOUT into a WebSocket server."
arch=('x86_64' 'i686')
url="https://github.com/joewalnes/websocketd"
license=('BSD')
depends=('glibc')

if [[ ${CARCH} == "x86_64" ]]; then
    source=("https://github.com/joewalnes/websocketd/releases/download/v${pkgver}/websocketd-${pkgver}-linux_amd64.zip")
    md5sums=('f05240b7b5d4fdb34d7358bcd9c4d938')
elif [[ ${CARCH} == "i686" ]]; then
    source=("https://github.com/joewalnes/websocketd/releases/download/v${pkgver}/websocketd-${pkgver}-linux_386.zip")
    md5sums=('43114378a078d77dbab2d3c850db07cb')
fi

package() {
    cd "${srcdir}"
    install -Dm755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}
