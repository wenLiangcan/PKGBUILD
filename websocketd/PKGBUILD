# Maintainer: wenLiangcan <boxeed@gmail.com>

pkgname=websocketd
pkgver=0.2.8
pkgrel=1
pkgdesc="Like inetd, but for WebSockets. Turn any application that uses STDIO/STDOUT into a WebSocket server."
arch=('x86_64' 'i686')
url="https://github.com/joewalnes/websocketd"
license=('BSD')
depends=('glibc')

if [[ ${CARCH} == "x86_64" ]]; then
    source=("http://download.websocketd.com/releases/websocketd/${pkgver}/linux_amd64/${pkgname}")
    md5sums=('041df1778c53bc4c67b7aeef4e183b85')
elif [[ ${CARCH} == "i686" ]]; then
    source=("http://download.websocketd.com/releases/websocketd/${pkgver}/linux_386/${pkgname}")
    md5sums=('5da87bb18bc911cd69da9d7e3b7462c6')
fi

package() {
    cd "${srcdir}"
    install -Dm755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}
