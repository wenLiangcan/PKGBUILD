# Maintainer: wenLiangcan <boxeed@gmail.com>

pkgname=websocketd
pkgver=0.2.7
pkgrel=1
pkgdesc="Like inetd, but for WebSockets. Turn any application that uses STDIO/STDOUT into a WebSocket server."
arch=('x86_64' 'i686')
url="https://github.com/joewalnes/websocketd"
license=('BSD')
depends=('glibc')

if [[ ${CARCH} == "x86_64" ]]; then
		source=("http://download.websocketd.com/releases/websocketd/$pkgver/linux_amd64/websocketd")
		md5sums=('53ed7a5db29cb376fb9204f553367835')
elif [[ ${CARCH} == "i686" ]]; then
		source=("http://download.websocketd.com/releases/websocketd/$pkgver/linux_386/websocketd")
        md5sums=('cf2b5b5c543147d2e65ff21422d808b2')
fi

package() {
		cd "$srcdir"
		install -Dm755 "$pkgname" "$pkgdir/usr/bin/$pkgname"
}
